<nav class="navbar has-shadow is-spaced" role="navigation" aria-label="main-navigation" data-controller="nav">
  <div class="navbar-brand">
    <%= link_to root_path, class: "navbar-item" do %>
      <%= image_tag 'logo.png' %>
    <% end %>
    <a
      role="button"
      class="navbar-burger burger"
      aria-label="menu"
      aria-expanded="false"
      data-nav-target="burger"
      data-action="click->nav#toggleNav"
    >
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
    </a>
  </div>

  <div class="navbar-menu" id="navMenu" data-nav-target="menu">

    <%= render "shared/userMenu" if user_signed_in? %>

    <%= render "shared/environment" if !Rails.env.production? %>
    
    <div class="navbar-end">
      <% if user_signed_in? %>
        <div class="navbar-item">
          <%= link_to accounts_path, class: "button is-outlined" do %>
            <span class="icon">
              <i class="fas fa-wallet"></i>
            </span>
            <span>Accounts</span>
          <% end %>
        </div>
      <% end %>
      <div class="navbar-item">
        <div class="buttons">
          <%= render "shared/guestlinks" if !user_signed_in? %>
        </div>
      </div>
    </div>
  </div>
</nav>