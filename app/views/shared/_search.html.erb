<div class="navbar-item">
  <%= form_with url: search_index_path, method: :get, class: "field has-addons" do |form| %>
    <div class="control">
      <%= form.text_field :query, 
                         placeholder: "Transaction search", 
                         class: "input is-small", 
                         value: params[:query] %>
    </div>
    <div class="control">
      <%= form.submit "Search", class: "button is-primary is-small" %>
    </div>
  <% end %>
</div>
