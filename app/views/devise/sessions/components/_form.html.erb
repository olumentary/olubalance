<h3 class="title is-4 has-text-link">Login to olubalance</h3>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { data: { turbo: false } }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="columns">
    <div class="column">
      <div class="field">
        <label class="label has-text-grey">Email Address</label>
        <div class="control has-icons-left">
          <%= f.text_field :email, class: "input is-primary",
                                  placeholder: "john@gmail.com" %>
          <span class="icon is-small is-left">
            <i class="fas fa-envelope"></i>
          </span>
        </div>
      </div>

      <div class="field">
        <label class="label has-text-grey">Password</label>
        <div class="control has-icons-left">
          <%= f.password_field :password, class: "input is-primary",
                                          placeholder: "Password" %>
          <span class="icon is-small is-left">
            <i class="fas fa-lock"></i>
          </span>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <label class="checkbox">
            <%= f.check_box :remember_me %>
            <span class="ml-2">Remember me</span>
          </label>
        </div>
      </div>
    </div>
  </div>

  <div class="field is-grouped is-grouped-centered">
    <div class="control">
      <%= f.button "Login", class: "button is-primary" %>
    </div>
  </div>
<% end %>

<div class="has-text-centered">
  <%= render partial: "devise/shared/links" %>
</div>