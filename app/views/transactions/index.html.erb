<%= turbo_refreshes_with method: :morph, scroll: :preserve %>

<%= render partial: "shared/backButton", locals: { 
  param_back_path: accounts_path, 
  param_back_text: "Accounts", 
  param_new_path: new_account_transaction_path
} %>

<div id="transaction_level">
  <%= render partial: "transactions/components/transactionLevel" %>
</div>

<% if !@account.credit? %>
  <div id="stash_list">
    <%= render partial: "stashes/components/stashList" %>
  </div>
<% end %>

<%= turbo_frame_tag "transactions_table" do %>
  <%= render partial: "transactions/components/transactionList" %>
  <%= render partial: "transactions/components/pagination" %>
<% end %>