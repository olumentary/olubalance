<div class="dropdown-item">
  <div class="columns is-mobile is-bottom-aligned">
    <div class="column is-one-fifth">
      <div class="field has-addons">
        <p class="control">
          <button class="button is-small is-grey add-to-stash" data-action="add" data-target="<%= stash_form_class %>-<%= stash.id %>">
            <span class="icon is-small has-text-success">
              <i class="fas fa-plus"></i>
            </span>
          </button>
        </p>
        <p class="control">
          <button class="button is-small is-grey remove-from-stash" data-action="remove" data-target="<%= stash_form_class %>-<%= stash.id %>">
            <span class="icon is-small has-text-danger">
              <i class="fas fa-minus"></i>
            </span>
          </button>
        </p>
      </div>
    </div>
    <div class="column">
      <p><strong><%= stash.name %></strong></p>
      <progress class="progress is-primary is-small" value="<%= stash.balance %>" max="<%= stash.goal %>"><%= stash.balance %>%</progress>
    </div>
  </div>
</div>
<div class="dropdown-item ob-stash-form ob-is-hidden" id="<%= stash_form_class%>-<%= stash.id %>">
    <div class="field has-addons">
      <div class="control">
        <%# <%= f.text_field :amount, class: "input is-small is-primary ob-trx-stash-input",
                                  placeholder: "0.00" %>
      </div>
      <div class="control">
        <%= link_to add_to_stash_account_stash_path(id: stash.id), class: "button is-small is-success" do %>
          <span class="icon">
            <i class="fas fa-lg fa-check"></i>
          </span>
        <% end %>
      </div>
      <div class="control">
        <a class="button is-small is-danger has-background-white cancel-stash-input" data-target="<%= stash_form_class %>-<%= stash.id %>">
          <span class="icon">
            <i class="fas fa-lg fa-times"></i>
          </span>
        </a>
      </div>
    </div>
</div>