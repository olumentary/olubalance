<div id="account-balances">
  <div class="level-item has-text-centered mr-30">
    <div>
      <p class="title <%= @account.balance_color %>"><%= @account.current_balance_display %></p>
      <p class="heading has-text-grey is-size-7 has-text-weight-bold">Balance (Usable)</p>
    </div>
  </div>
  <% if @pending_balance != 0 %>
    <div class="level-item has-text-centered">
      <div>
        <p class="title tag is-warning is-6"><%= number_to_currency(@pending_balance) %></p>
        <p class="heading has-text-grey is-size-7 has-text-weight-bold">Pending</p>
      </div>
    </div>
  <% end %>
  <% if @stashed != 0 %>
    <div class="level-item has-text-centered">
      <div>
        <p class="title tag is-success is-6"><%= number_to_currency(@stashed) %></p>
        <p class="heading has-text-grey is-size-7 has-text-weight-bold">Stashed</p>
      </div>
    </div>
  <% end %>
  <% if @account.savings? %>
    <div class="level-item has-text-centered">
      <div>
        <p class="title tag is-white is-6"><%= @account.interest_rate %>%
        <p class="heading has-text-grey is-size-7 has-text-weight-bold">Interest Rate</p>
      </div>
    </div>
  <% end %>
</div>